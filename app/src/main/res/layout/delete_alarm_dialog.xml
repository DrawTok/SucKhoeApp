<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_20sdp"
        android:background="@drawable/custom_dialog"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp">
        <TextView
            android:id="@+id/tvTitleDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lời khuyên"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"/>

        <TextView
            android:id="@+id/tvDescribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="normal"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Bạn có chắc chắn xóa mục đã chọn không?"
            app:layout_constraintTop_toBottomOf="@id/tvTitleDelete"/>

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Hủy"
            app:layout_constraintTop_toBottomOf="@id/tvDescribe"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/custom_btn"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintEnd_toStartOf="@id/tvAccept"/>

        <TextView
            android:id="@+id/tvAccept"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Chắc chắn"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:background="@drawable/custom_btn"
            android:backgroundTint="@color/green"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvCancel"
            app:layout_constraintStart_toEndOf="@id/tvCancel"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>