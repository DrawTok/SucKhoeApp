<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:background="@color/white">

        <TextView
            android:id="@+id/titleDailyGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mục tiêu hàng ngày"
            android:textSize="@dimen/_16ssp"
            android:layout_marginTop="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvStepGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleDailyGoal"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="6000"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:textSize="@dimen/_20ssp"
            app:drawableEndCompat="@drawable/baseline_edit_note_24" />

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/progressStep"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvStepGoal"
            android:layout_marginTop="@dimen/_10sdp"
            app:cpb_background_progressbar_color="@color/green_third"
            app:cpb_background_progressbar_width="@dimen/_20sdp"
            app:cpb_progressbar_color="@color/green"
            app:cpb_progressbar_width="@dimen/_20sdp"
            app:cpb_progress_max="6000"
            app:cpb_progress="0"
            app:cpb_round_border="true"/>

        <TextView
            android:id="@+id/tvCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="@dimen/_25ssp"
            app:layout_constraintStart_toStartOf="@id/progressStep"
            app:layout_constraintEnd_toEndOf="@id/progressStep"
            app:layout_constraintTop_toTopOf="@id/progressStep"
            app:layout_constraintBottom_toBottomOf="@id/progressStep"/>
        <LinearLayout
            android:id="@+id/linearTravelTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_text"
            android:backgroundTint="@color/green"
            android:paddingTop="@dimen/_20sdp"
            android:paddingBottom="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/linearTravelDistance"
            app:layout_constraintTop_toBottomOf="@id/progressStep"
            android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:src="@drawable/clock" />

        <TextView
            android:id="@+id/tvTravelTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0h 3m"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:textSize="@dimen/_18ssp"
        android:drawablePadding="@dimen/_5sdp"
        />
    </LinearLayout>

        <LinearLayout
            android:id="@+id/linearTravelDistance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_text"
            android:backgroundTint="@color/green"
            android:paddingTop="@dimen/_20sdp"
            android:paddingBottom="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/linearTravelTime"
            app:layout_constraintTop_toTopOf="@id/linearTravelTime"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/navigation" />

            <TextView
                android:id="@+id/tvTravelDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_18ssp"
                android:text="116m"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"/>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_text"
            android:backgroundTint="@color/green"
            android:paddingTop="@dimen/_20sdp"
            android:paddingBottom="@dimen/_20sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@id/linearTravelTime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvHighestDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="29/05/2023"
                android:textSize="@dimen/_14ssp"
                android:textAlignment="center"
                android:layout_marginEnd="@dimen/_5sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvHighestStep"/>

            <TextView
                android:id="@+id/tvHighestStep"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="21344 bước"
                android:textSize="@dimen/_14ssp"
                android:textAlignment="center"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                app:layout_constraintTop_toTopOf="@id/tvHighestDate"
                app:layout_constraintBottom_toBottomOf="@id/tvHighestDate"
                app:layout_constraintStart_toEndOf="@id/tvHighestDate"
                app:layout_constraintEnd_toStartOf="@id/tvHighestDistance" />

            <TextView
                android:id="@+id/tvHighestDistance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="15,36km"
                android:textSize="@dimen/_14ssp"
                android:layout_marginStart="@dimen/_5sdp"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvHighestDate"
                app:layout_constraintBottom_toBottomOf="@id/tvHighestDate"
                app:layout_constraintStart_toEndOf="@id/tvHighestStep"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>