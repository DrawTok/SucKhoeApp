<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.draw.suckhoe.customView.WaveWater
            android:id="@+id/wave_water"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/green_secondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/custom_dialog"
            android:padding="@dimen/_10sdp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintDailyGoals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/daily_goals"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvGoals"
                    app:layout_constraintBottom_toBottomOf="@id/tvGoals"/>

                <TextView
                    android:id="@+id/tvGoals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2000ml"
                    app:layout_constraintEnd_toStartOf="@id/imvEdit"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imvEdit"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    app:srcCompat="@drawable/baseline_edit_note_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvGoals"
                    app:layout_constraintBottom_toBottomOf="@id/tvGoals"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tvRecentWater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/final_drink"
                android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintTop_toBottomOf="@id/constraintDailyGoals"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/valueRecentWater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="--ml"
                app:layout_constraintTop_toTopOf="@id/tvRecentWater"/>

            <TextView
                android:id="@+id/tvNumOfCups"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/number_drink"
                android:layout_marginTop="5sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvRecentWater"/>

            <TextView
                android:id="@+id/valueNumOfCups"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="0 Cốc"
                app:layout_constraintTop_toTopOf="@id/tvNumOfCups"/>

            <View
                android:id="@+id/vLine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/gray_secondary"
                android:layout_margin="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/valueNumOfCups"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/vLine"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/tvHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lịch sử và thống kê"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imvForward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    app:layout_constraintTop_toTopOf="@id/tvHistory"
                    app:layout_constraintBottom_toBottomOf="@id/tvHistory"
                    app:layout_constraintStart_toEndOf="@id/tvHistory"
                    android:background="@drawable/baseline_arrow_forward_ios_24"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/btnDecrease"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/minus_svg"
            android:background="@color/white"
            app:riv_corner_radius="999dp"
            app:riv_oval="true"
            android:padding="@dimen/_15ssp"
            android:scaleType="fitCenter"
            app:riv_border_width="@dimen/_1sdp"
            app:riv_border_color="@color/white"
            app:riv_mutate_background="true"
            app:layout_constraintEnd_toStartOf="@id/btnIncrease"
            app:layout_constraintTop_toTopOf="@id/btnIncrease"
            app:layout_constraintBottom_toBottomOf="@id/btnIncrease"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnIncrease"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_60sdp"
            android:background="@drawable/glass"
            android:layout_marginBottom="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnDecrease"
            app:layout_constraintEnd_toStartOf="@id/btnSetUp"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/btnSetUp"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/bottle"
            android:background="@color/white"
            app:riv_corner_radius="999dp"
            app:riv_oval="true"
            android:scaleType="fitCenter"
            app:riv_border_width="@dimen/_1sdp"
            app:riv_border_color="@color/white"
            app:riv_mutate_background="true"
            app:layout_constraintTop_toTopOf="@id/btnIncrease"
            app:layout_constraintStart_toEndOf="@id/btnIncrease"
            app:layout_constraintBottom_toBottomOf="@id/btnIncrease"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>