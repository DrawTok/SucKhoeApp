<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SứcKhỏe" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="switchStyle">@style/Custom.Widget.SwitchCompat</item>
        <item name="checkboxStyle">@style/Custom.Widget.CheckBox</item>
    </style>

    <style name="whiteText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Custom.Widget.CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox"/>

    <style name="Custom.Widget.SwitchCompat" parent="Widget.AppCompat.CompoundButton.Switch"/>

    <style name="Theme.SứcKhỏe" parent="Base.Theme.SứcKhỏe" />
    
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/anim_bottom_out</item>
    </style>
    
    <style name="ThemeMaterialCalendar" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <!-- Header panel -->
        <item name="materialCalendarHeaderLayout">@style/MaterialCalendar.HeaderLayout1</item>
        <item name="materialCalendarStyle">@style/CustomMaterialCalendar</item>
        <item name="materialCalendarHeaderSelection">@style/CustomHeaderSelection</item>
        <item name="materialCalendarHeaderToggleButton">@style/CustomToggleBtn</item>
        <!--Button-->
        <item name="buttonBarNegativeButtonStyle">@style/Buttons</item>
        <item name="buttonBarPositiveButtonStyle">@style/Buttons</item>
    </style>
    <style name="MaterialCalendar.HeaderLayout1" parent="Widget.MaterialComponents.MaterialCalendar.HeaderLayout">
        <item name="android:background">@color/green</item>
    </style>

    <style name="CustomMaterialCalendar" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="itemTextColor">@color/black</item>
        <item name="rangeFillColor">@color/green_third</item>
        <item name="daySelectedStyle">@style/CustomSelected</item>
        <item name="yearSelectedStyle">@style/CustomSelected</item>
    </style>

    <style name="CustomHeaderSelection" parent="Widget.MaterialComponents.MaterialCalendar.HeaderSelection">
        <item name="android:textSize">@dimen/_20sdp</item>
    </style>

    <style name= "CustomToggleBtn" parent="Widget.MaterialComponents.MaterialCalendar.HeaderToggleButton">
        <item name="android:visibility">gone</item>
    </style>


    <style name= "CustomSelected" parent="Widget.MaterialComponents.MaterialCalendar.Day.Selected">
        <item name="itemFillColor">@color/green</item>
        <item name="itemTextColor">@color/white</item>
    </style>

    <style name="Buttons" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>